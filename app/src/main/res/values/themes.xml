<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/app_colorPrimary</item>
		<item name="colorPrimaryDark">@color/app_colorPrimaryDark</item>
		<item name="colorAccent">@color/app_colorAccent</item>
		<item name="colorControlHighlight">@color/app_colorPrimaryLight</item>

		<item name="android:windowContentTransitions">true</item>
	</style>

	<style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
		<item name="colorPrimary">@color/app_colorPrimary</item>
		<item name="colorPrimaryDark">@color/app_colorPrimaryDark</item>
		<item name="colorAccent">@color/app_colorAccent</item>
		<item name="colorControlHighlight">@color/app_colorPrimaryLight</item>

		<item name="android:windowContentTransitions">true</item>
	</style>

	<style name="AppTheme.Dark.Fullscreen">
		<!-- Make both the navigation and status bar translucent -->
		<item name="android:windowTranslucentStatus">true</item>
		<item name="android:windowTranslucentNavigation">true</item>
	</style>

	<style name="SplashTheme.Start" parent="AppTheme.Dark.Fullscreen">
		<item name="android:windowBackground">@drawable/splash_screen</item>
	</style>

	<style name="SplashTheme" parent="AppTheme.Dark.Fullscreen"/>

	<style name="TasksTheme" parent="AppTheme"/>

	<style name="SettingsTheme" parent="AppTheme.Dark.Fullscreen">
		<item name="android:windowBackground">?attr/colorPrimary</item>
	</style>

	<style name="TimerTheme" parent="AppTheme.Dark.Fullscreen">
		<item name="android:windowBackground">?attr/colorPrimary</item>
	</style>

</resources>
